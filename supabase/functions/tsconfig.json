{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["../../types/deno"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../types/deno.d.ts"
  ]
} 